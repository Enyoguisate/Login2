
@{
    ViewBag.Title = "ABMPokemon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<html lang="en">


<body style="background-color: #4F4444">

<div id="page-content">
    <div class="w3-container">
        <div class="jumbotron ">
            <h2>Administrar Pokemones</h2>
            <p>Ingresar el nombre del Pokemon</p>
            <form class="form-inline">
                <input type="text" class="form-control" size="50" placeholder="Nombre del Pokemon">
                <button type="button" class="btn btn-danger">Agregar</button>
                <button type="button" class="btn btn-danger">Modificar</button>
            </form>
        </div>
    </div>
</div>

